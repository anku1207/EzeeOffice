<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Activity.WorkFlow.AprrovedRejectTaskActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_task_approve_reject_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_task_approve_reject_tracking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:navigationIcon="@drawable/ic_back"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="Approved / Rejected Task"
                app:titleTextColor="@color/white">

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>
    </androidx.cardview.widget.CardView>


    <ProgressBar
        android:id="@+id/pg_task_approve_reject"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateDrawable="@drawable/progressbar_rotate"
        android:visibility="gone" />


    <ScrollView
        android:id="@+id/scrollview_main_approve_reject"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:visibility="visible">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="8dp"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iv_aproved_reject_take_photo"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/camera" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Take a picture"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:weightSum="1">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.35"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.10"
                            android:gravity="center"
                            android:text="or"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_weight="0.35"
                            android:background="@color/colorPrimaryDark"
                            android:gravity="center" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_aproved_reject_choose_file"
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:layout_marginTop="10dp"
                        app:srcCompat="@drawable/filemanger" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Choose File"
                        android:textStyle="bold" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/checkbox_approve_reject_fileupload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:buttonTint="@color/white"
                        android:padding="10dp"
                        android:text="Attach Document (Optional)"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/ll_approve_reject_task_upload_file_upload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="230dp"
                            android:background="@drawable/diagonal_layout_blue_half_rect"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <ImageView
                                android:id="@+id/iv_approve_reject_task_upload_filetype"
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:contentDescription="TODO"
                                android:visibility="visible"
                                app:srcCompat="@drawable/file" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cv_approve_reject_task_upload_camera"
                                android:layout_width="150dp"
                                android:layout_height="200dp"
                                android:layout_marginTop="10dp"
                                android:visibility="gone"
                                app:cardBackgroundColor="@color/green_normal"
                                app:cardElevation="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="3dp"
                                    android:background="@color/grey_new">

                                    <ImageView
                                        android:id="@+id/iv_approve_reject_task_upload_camera"
                                        android:layout_width="150dp"
                                        android:layout_height="200dp"
                                        android:layout_gravity="center"
                                        android:contentDescription="TODO"
                                        android:cropToPadding="true"
                                        android:visibility="visible"
                                        app:srcCompat="@drawable/png" />
                                </LinearLayout>


                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="20dp"
                            android:visibility="visible">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="5dp"
                                app:cardUseCompatPadding="true">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/tv_approve_reject_task_upload_filepath"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.7"
                                        android:background="@color/grey"
                                        android:gravity="center"
                                        android:hint="No File Selected"
                                        android:textColor="@color/black"
                                        android:textSize="12sp"
                                        android:textStyle="bold" />


                                    <Button
                                        android:id="@+id/btn_approve_reject_task_upload_choose_file"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_weight="0.3"
                                        android:background="@color/colorPrimary"
                                        android:text="Choose File"
                                        android:textColor="@color/white"
                                        android:textSize="13sp" />

                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:padding="10dp"
                        android:text="Task Action"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <!--radio buttons-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="visible">


                        <RadioGroup
                            android:id="@+id/rg_task_action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RadioButton
                                android:id="@+id/rb_approve_reject_processed"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Processed"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_approve_reject_approved"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approved"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_approve_reject_rejected"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rejected"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_approve_reject_aborted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Aborted"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_approve_reject_complete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Complete"
                                android:visibility="gone" />

                            <RadioButton
                                android:id="@+id/rb_approve_reject_done"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Done"
                                android:visibility="gone" />

                        </RadioGroup>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_approve_reject_task_adduser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_approve_reject_task_add_user"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.9"
                            android:padding="10dp"
                            android:text="Add User"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/iv_approve_reject_task_add_user"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.1"
                            android:padding="7dp"
                            app:srcCompat="@drawable/ic_add_box_white_24dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_aproved_reject_add_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="7dp"
                        android:visibility="gone">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="@string/assign_user"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/red" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/grey"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/sp_approve_reject_task_assign_user"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                            </Spinner>

                            <TextView
                                android:id="@+id/tv_sp_approve_reject_task_assign_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:text="@string/alternate_user"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/grey"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/sp_approve_reject_task_alternative_user"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                            </Spinner>

                            <TextView
                                android:id="@+id/tv_sp_approve_reject_task_alternative_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />


                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:padding="10dp"
                                android:text="@string/select_supervisor"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/red" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/grey"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/sp_approve_reject_task_select_supervisior"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">

                            </Spinner>

                            <TextView
                                android:id="@+id/tv_sp_approve_reject_task_select_supervisior"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:padding="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="@string/deadline"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_marginLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/red" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:gravity="right">

                                <RadioGroup
                                    android:id="@+id/rg_deadline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/rb_approve_reject_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Date" />

                                    <RadioButton
                                        android:id="@+id/rb_approve_reject_days"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Days" />

                                    <RadioButton
                                        android:id="@+id/rb_approve_reject_hours"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hours" />

                                </RadioGroup>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_et_hrs_days"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/et_approve_reject_task_deadline_hrs"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/bg_take_pic"
                                android:hint="Enter Hours"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textSize="13sp"
                                android:visibility="gone" />

                            <EditText
                                android:id="@+id/et_approve_reject_task_deadline_days"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:background="@drawable/bg_take_pic"
                                android:hint="Enter Days"
                                android:inputType="number"
                                android:padding="10dp"
                                android:textSize="13sp"
                                android:visibility="gone" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_aproved_reject_date_between"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:padding="10dp"
                            android:visibility="gone"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="0px"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />

                            <EditText
                                android:id="@+id/et_approve_reject_task_deadline_start"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:background="@drawable/shape_rect_3"
                                android:drawableEnd="@drawable/calender"
                                android:drawableRight="@drawable/calender"
                                android:hint="Start Datetime"
                                android:padding="7dp"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="0.10"
                                android:background="@color/colorPrimary"
                                android:gravity="center"
                                android:text="to"
                                android:textColor="@color/white"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="0px"
                                android:focusable="true"
                                android:focusableInTouchMode="true" />

                            <EditText
                                android:id="@+id/et_approve_reject_task_deadline_end"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.45"
                                android:background="@drawable/shape_rect_3"
                                android:drawableEnd="@drawable/calender"
                                android:drawableRight="@drawable/calender"
                                android:hint="End Datetime"
                                android:padding="7dp"
                                android:textSize="13sp" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_approve_reject_task_adduser_dynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/ll_aproved_reject_add_user_dynamic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal"
                            android:padding="5dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:text="@string/order"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_approve_reject_task_order"
                                    android:layout_width="40dp"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="30dp"
                                    android:background="@drawable/shape_circle"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="2"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />


                            </RelativeLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="@string/assign_user"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/red" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/grey"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/sp_approve_reject_task_assign_user_dynamic"
                                android:layout_width="match_parent"
                                android:layout_height="40dp">


                            </Spinner>

                            <!--  for the userid -->

                            <TextView
                                android:id="@+id/tv_sp_approve_reject_task_assign_user_dynamic"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:text="@string/alternate_user"
                                android:textColor="@color/colorPrimaryDark"
                                android:textStyle="bold" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="*"
                                android:textColor="@color/red"
                                android:visibility="gone" />


                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/grey"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/sp_approve_reject_task_alternative_user_dynamic"
