                                    <RadioButton
                                        android:id="@+id/rb_approve_reject_days_dynamic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Days" />

                                    <RadioButton
                                        android:id="@+id/rb_approve_reject_hours_dynamic"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Hours" />

                                </RadioGroup>

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
