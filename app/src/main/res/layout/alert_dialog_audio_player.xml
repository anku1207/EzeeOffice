<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp">

           <ImageView
               android:id="@+id/iv_audio_player_dialog_close"
               android:layout_margin="10dp"
               android:layout_gravity="right"
               app:srcCompat="@drawable/ic_close_white_24dp"
               android:layout_width="24dp"
               android:layout_height="24dp" />

            <TextView
                android:gravity="center"
                android:id="@+id/tv_audio_player_dialog_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/white"
                android:padding="12dp"
                android:text="Name of the song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

                <ImageView
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_music_note_white"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />

               <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                   android:id="@+id/iv_audio_player_dialog_audio_view"
                   android:padding="5dp"
                   app:hide_on_touch="false"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

               </com.google.android.exoplayer2.ui.SimpleExoPlayerView>


    </LinearLayout>

</androidx.cardview.widget.CardView>